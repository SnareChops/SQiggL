{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "outDir": ".",
        "rootDir": ".",
        "sourceMap": false,
        "moduleResolution": "node",
        "suppressImplicitAnyIndexErrors": true,
        "noEmitOnError": true
    },
    "exclude": [
        "node_modules",
        "old-src",
        "old-tests"
    ]
}